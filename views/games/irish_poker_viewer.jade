link(rel='stylesheet', href='/css/irish_poker.css')

#game-info(data-gameSlug=game.slug, data-status=game.serialize())

.game-header
  h1 Irish Poker
  h2 #{game.slug}

  div#players
    each player in game.players
      div= player.name

  div#status


  #player-cards

  script(src="/js/irish_poker_viewer.js")

  script(type='text/javascript').
    $(function() {
      new IrishPokerViewer();
    });
